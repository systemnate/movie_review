    <%= f.label :description %><br>
    <%= f.text_area :description, :value => params[:description], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :movie_length %><br>
    <%= f.text_field :movie_length, :value => params[:movie_length], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :director %><br>
    <%= f.text_field :director, :value => params[:director], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %><br>
    <%= f.text_field :rating, class: "form-control" %>
  </div>
  <p>Image URL:</p>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.text_field :image, :value => params[:image], class: "form-control" %>
